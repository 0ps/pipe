{
  "note": "This is a sample config file. You should change the mockDirectory to a more reasonable path.",
  "mockDirectory": "./mock",
  "allowedHeaders": [
    "Content-Type",
    "*"
  ],
  "allowedDomains": [
    "localhost"
  ],
  "webServices": {
    "base": {
      "verbs": [
        "get"
      ],
      "mockFile": "base.json"
    },
    "console/tags": {
      "verbs": [
        "get"
      ],
      "mockFile": "tagList.json"
    },
    "console/articles": {
      "verbs": [
        "get",
        "post"
      ],
      "responses": {
        "post": {
          "mockFile": "success.json"
        },
        "get": {
          "mockFile": "articleList.json"
        }
      }
    },
    "console/articles/:id": {
      "verbs": [
        "delete",
        "put",
        "get"
      ],
      "responses": {
        "delete": {
          "mockFile": "success.json"
        },
        "put": {
          "mockFile": "error.json"
        },
        "get": {
          "mockFile": "article.json"
        }
      }
    },
    "init": {
      "verbs": [
        "post"
      ],
      "mockFile": "error.json"
    },
    "login": {
      "verbs": [
        "post"
      ],
      "mockFile": "success.json"
    },
    "hp/apis/check-account": {
      "verbs": [
        "post"
      ],
      "mockFile": "success.json"
    },
    "hp/apis/articles": {
      "verbs": [
        "get"
      ],
      "mockFile": "hacpaiArticleList.json"
    }
  }
}
